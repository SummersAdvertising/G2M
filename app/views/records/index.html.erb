<h1>Listing records</h1>

<table>
  <tr>
    <th>User fbid</th>
    <th>User type</th>
    <th>Answer</th>
    <th>Fbshare</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.user_fbid %></td>
    <td><%= record.user_type %></td>
    <td><%= record.answer %></td>
    <td><%= record.fbshare_id %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

