form.validationEngine();

$("input.has_children, input.hide_children").change(function(){
    var $this = $(this)
    if( $this.is(":checked") ){
        switch($this.is(".has_children")) {
            case true:
            $this.parent().next('.second').stop().show(500, function(){
            //iframeExt.update();
        }).children("input").addClass("validate[required]");
            break;

            case false:
            $this.parent().next('.second').stop().hide(500, function(){
            //iframeExt.update();
        }).children("input").removeClass("validate[required]").prop("checked", false);
            break;
        }
    }
});

form.submit(function(){
    var answerObj = new Object();
    var answers = $(".questions:visible input[type='radio']:checked");

    answers.each(function(){
        answerObj[$(this).prop("name")] = $(this).val();
    });

    answerObj.yes_count = answers.filter( "[value='yes']" ).length;
    
    var input_record_answer = $("<input>").attr("type", "hidden").attr("name", "record[answer]").val( JSON.stringify(answerObj) );
    var input_record_type = $("<input>").attr("type", "hidden").attr("name", "from").val("iframe");

    form.append(input_record_answer).append(input_record_type);
    
    // return false;
    return $(this).validationEngine('validate');
});

  });
