<script type="text/javascript">
  $(document).ready(function(){
    var iframeExt = $.iframeHeightExternal();

    var _showTab = 0;
    var $defaultLi = $('#tab ul li').eq(_showTab);

    $('#tab ul li').click(function(e) {
        e.preventDefault();
        //iframeExt.update();

        var $this = $(this),
        _clickTab = $this.find('a');

        $this.addClass('active').siblings('.active').removeClass('active');   
        $(_clickTab.attr('href')).stop(false, true).fadeIn(1000).siblings().hide();

        $("#record_user_type").val( _clickTab.data("value") );

        return false;
    }).find('a').focus(function(){
        this.blur();
